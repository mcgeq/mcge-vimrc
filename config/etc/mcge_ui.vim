vim9script

set guioptions-=T               # 隐藏工具栏
set guioptions-=m               # 隐藏菜单栏
set guioptions-=r               # 隐藏右侧滚动条
set guioptions-=l               # 隐藏左侧滚动条
set guioptions-=b               # 隐藏底部滚动条

# Set the command line window height to 2 lines.
set cmdheight=2

# set background=light
g:gruvbox_italic = 1
colorscheme gruvbox
